{
	"name": "@cipscis/base-package",
	"version": "0.1.0",
	"description": "This is my base project to use when creating new packages.",
	"private": true,
	"browser": "./dist/main-export.js",
	"type": "module",
	"files": [
		"dist/**/*"
	],
	"types": "dist/main-export.d.ts",
	"scripts": {
		"server": "node server/server.js",
		"build": "gulp build",
		"watch": "gulp",

		"lintJs": "eslint src/**",
		"lintCss": "stylelint docs/assets/scss/**/*.scss",
		"lint": "npm run lintJs && npm run lintCss",

		"start": "concurrently --kill-others \"npm run server\" \"npm run watch\"",
		"test": "npm run lint && tsc && jasmine",
		"prepare": "gulp clean && npm test"
	},
	"author": "Mark Hanna",
	"repository": {
		"type": "git",
		"url": "https://github.com/cipscis/base-package.git"
	},
	"license": "Hippocratic-2.1",
	"devDependencies": {
		"@types/jasmine": "^4.3.1",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"concurrently": "^8.0.1",
		"dotenv": "^16.0.3",
		"eslint": "^8.38.0",
		"express": "^4.18.2",
		"gulp": "^4.0.2",
		"gulp-sass": "^5.1.0",
		"jasmine": "^4.6.0",
		"sass": "^1.61.0",
		"stylelint": "^15.4.0",
		"stylelint-config-recommended-scss": "^9.0.1",
		"ts-loader": "^9.4.2",
		"typescript": "^5.0.4",
		"webpack": "^5.78.0"
	},
	"engines": {
		"node": ">=16"
	}
}
